//This show as simple example of how to archive the build output artifacts.
node{
        stage('Checkout SCM'){
            git branch: 'master', url:'https://github.com/Edw1nM4rquez/Distribuidora.git'
        }

        stage('Install node modules'){
            sh"npm install"
        }

        stage('Build'){
            sh"npm run build:ssr"
        }

        stage ('Deploy'){
            sh "pm2 restart all"
        }


}